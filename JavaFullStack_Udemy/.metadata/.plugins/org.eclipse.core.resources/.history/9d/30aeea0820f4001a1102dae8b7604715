package s4p01_operators.examples;

public class Operators {
	// to perform some operations 
	
	public static void main(String[] args) {
		 int x = 10;
		 System.out.println(x);
		 
		 // +
		 int a = 10;
		 int b = 20;
		 System.out.println(a+b);//addition
		 
		 String s1 = "Hello";
		 String s2 = "world";
		 System.out.println(s1+s2); //concatinate
	
		 System.out.println(b-a);//substraction
		 System.out.println(a*b);//Multiplication
		 System.out.println(b/a);//substraction
		 System.out.println(b%a);//modulus
		 
		 //++ (increment operation)
		 System.out.println(x++); // post fix -after execution value is incremented 
		 System.out.println(x);
		 
		 System.out.println(++x); // pre fix -ivreementation is done first
		 
		 //-- (decrement operation)
		 System.out.println(x--); // post fix -after execution value is incremented 
		 System.out.println(x);
		 
		 System.out.println(--x); // pre fix -ivreementation is done first


	}

}
